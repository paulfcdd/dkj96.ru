<nav class="navbar navbar-default main-header hidden-xs hidden-sm">
    <div class="container padding-0-100px">
        <div class="row">
            <div class="col-sm-2 header-logo-container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand site-logo" href="{{ path('front.index') }}">
                        <img src="{{ asset('img/logo.svg') }}">
                    </a>
                </div>
            </div>

            <div class="col-sm-10 main-menu">
                <div class="collapse navbar-collapse ul-nav-wrapper">

                    <ul class="nav navbar-nav col-lg-ul-nav">
						
						{% set requestUri = app.request.requestUri %}
						{% for menuItem in mainMenu %}
                       
							{% set active = null %}
						
							{% if menuItem.id == app.request.get('entity') %}
								{% set active = 'active' %}							
							{% endif %}
				
							{% if app.request.get('entity') == null %}
								{% if requestUri == menuItem.path %}
									{% set active = 'active' %}	
								{% endif %} 
							{% endif %}
						
                       	<li {% if active != null %}class="{{ active }}"{% endif %}>
							<a href="{{ menuItem.path }}">
								{{ menuItem.title }}
							</a>
						</li>
                        {% endfor %}
                    </ul>
                    
                </div><!-- /.navbar-collapse -->
            </div>
        </div>
    </div>
</nav>
