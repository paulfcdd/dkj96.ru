{% set page = app.request.get('page') %}

{% if page is null %}
    {% set page = 'index' %}
{% endif %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{% block title %}{% endblock %}</title>

    <link rel="stylesheet" href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.min.css') }}" type="text/css">
    <link rel="stylesheet" href="{{ asset('node_modules/font-awesome/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/custom.css') }}" type="text/css">

    {% block css_loader %}
        <link rel="stylesheet" href="{{ asset('css/front/page/'~page~'.css') }}">
    {% endblock %}

    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

<div class="wrapper">

    <div class="header row">
        {% block header %}

            {% set mainMenu = {
            '' : 'Главная',
            'zaly' : 'Залы',
            'artisty' : 'Артисты',
            'istoriya' : 'История',
            'otzyvy' : 'Отзывы',
            'kontakty' : 'Связь',
            } %}

            <div>
                {% include ':default/front/header:col-lg-nav.html.twig' with {'mainMenu': mainMenu} %}
            </div>

            <div>
                {% include ':default/front/header:col-xs-nav.html.twig' with {'mainMenu': mainMenu} %}
            </div>

        {% endblock %}
    </div>

    <div class="content">
        {% block content %}
            {% block main_banner_widget %}
                <div class="container-fluid index-page-banner" id="main-banner-index">
                    <div class="col-sm-4 col-sm-offset-8 banner-text">
                        <h3>Дворец</h3>
                        <h3>Культуры</h3>
                        <h3>Железнодорожников</h3>
                    </div>
                </div>
            {% endblock %}

        {% block under_banner_text_widget %}{% endblock %}

        {% endblock %}
        <div id="scroll-on-top"></div>
        <div class="container space-fix-container-2x"></div>

    </div><!-- .content -->

    <div class="footer xs-padding-0-10px">
        {% block footer %}
            <div class="container padding-left-0 padding-right-0 padding-top-20px">
                <div class="col-sm-6 col-xs-12 padding-0-100px footer-widget">
                    <h4 class="footer-widget-label">Контакты</h4>

                    <ul class="footer-widget-data-list list-unstyled">
                        <li><strong>Адрес:</strong></li>
                        <li>г. Екатеринбург, ул. Челюскинцев, 102 / Свердлова, 35</li>
                        <li><strong>Телефон:</strong></li>
                        <li>+7 (343) 310-53-58; 8-952-733-15-27 - администрация</li>
                        <li>+7 (343) 310-53-29 - касса</li>
                        <li><strong>Email:</strong></li>
                        <li><a href="mailto:dkj96@ya.ru" class="text-style-5">dkj96@ya.ru</a></li>
                    </ul>
                </div>
                <div class="col-sm-6 col-xs-12 padding-0-100px footer-widget">
                    <h4 class="footer-widget-label">Социальные сети</h4>
                    <ul class="footer-widget-data-list list-unstyled list-inline">
                        <li>
                            <a href="https://facebook.com/dssekb" class="btn btn-default social-icon-link" target="_blank">
                                <i class="fa fa-facebook fa-2x"></i>
                            </a>
                        </li>

                        <li>
                            <a href="https://vk.com/dkz_ekb" class="social-icon-link btn btn-default" target="_blank">
                                <i class="fa fa-vk fa-2x"></i>
                            </a>
                        </li>

                        <li>
                            <a href="https://www.youtube.com/domkult-ekb" class="social-icon-link btn btn-default" target="_blank">
                                <i class="fa fa-youtube fa-2x"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        {% endblock %}
    </div>

</div><!-- .wrapper -->


<script src="{{ asset('node_modules/jquery/dist/jquery.min.js') }}"></script>
<script src="{{ asset('node_modules/bootstrap/dist/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('js/jquery.gotop.js') }}"></script>

<script src="{{ asset('js/utils.js') }}"></script>

{% block javascripts %}{% endblock %}
</body>
</html>
