{% extends ':default/admin:manage.html.twig' %}

{% block page_heading %}
    {% if object.id == null %}
        Добавить новость
    {% else %}
        {{ object.title }}
    {% endif %}
{% endblock %}

{% block styles %}
    <link href="{{ asset('css/admin/dataTables.min.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="col-lg-12">

        <div class="alert alert-success alert-dismissable notification-box-main hidden">
            <a href="#" class="close" aria-label="close">&times;</a>
            <p class="notification-text-main"></p>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissable">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                {{ message | raw }}
            </div>
        {% endfor %}

        {{ form_start(form) }}

        <div style="margin: 0 0 20px 0;">
            {{ form_widget(form.save) }}
        </div>

        <div class="tabs-container">
            <div class="tabs-left">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a data-toggle="tab" href="#main_info" aria-expanded="false">
                            <span class="fa fa-info"></span> Основная информация
                        </a>
                    </li>
                    <li class="">
                        <a data-toggle="tab" href="#seo" aria-expanded="false">
                            <span class="fa fa-google"></span> SEO-информация
                        </a>
                    </li>
                    <li class="">
                        <a data-toggle="tab" href="#files" aria-expanded="false">
                            <span class="fa fa-file"></span> Файлы
                        </a>
                    </li>
                </ul>
                <div class="tab-content ">
                    <div id="main_info" class="tab-pane active">
                        <div class="panel-body">
                            {{ form_label(form.title) }}
                            {{ form_widget(form.title) }}

                            {{ form_label(form.publishStartDate) }}
                            {{ form_widget(form.publishStartDate) }}

                            {{ form_label(form.publishEndDate) }}
                            {{ form_widget(form.publishEndDate) }}

                            {{ form_label(form.slug) }}
                            <div class="input-group">
                                <!-- /btn-group -->
                                {{ form_widget(form.slug) }}
                                <div class="input-group-btn">
                                    <button type="button" class="btn btn-primary url-translit-generator">
                                        <i class="fa fa-link" aria-hidden="true"></i> Генерировать URL
                                    </button>
                                </div>
                            </div>

                            {{ form_label(form.description) }}
                            {{ form_widget(form.description) }}

                            {{ form_label(form.content) }}
                            {{ form_widget(form.content) }}
                        </div>
                    </div>
                    <div id="seo" class="tab-pane">
                        <div class="panel-body">
                            {{ form_label(form.seoTitle) }}
                            {{ form_widget(form.seoTitle) }}

                            {{ form_label(form.seoKeywords) }}
                            {{ form_widget(form.seoKeywords) }}

                            {{ form_label(form.seoDescription) }}
                            {{ form_widget(form.seoDescription) }}

                            {{ form_label(form.redirect) }}
                            {{ form_widget(form.redirect) }}

                            {{ form_label(form.redirectUrl) }}
                            {{ form_widget(form.redirectUrl) }}
                        </div>
                    </div>
                    <div id="files" class="tab-pane">

                        <div class="panel-body">
                            {{ form_label(form.files) }}
                            {{ form_widget(form.files) }}

                            <table class="table table-striped table-bordered table-hover files-list-table">
                                <thead>
                                <th>ID</th>
                                <th>Название</th>
                                <th>Расширение</th>
                                <th></th>
                                <th></th>
                                <th></th>
                                </thead>
                                <tbody>
                                {% for file in object.files %}
                                    <tr id="{{ 'file_'~file.id }}">
                                        <td>{{ file.id }}</td>
                                        <td>{{ file.name }}</td>
                                        <td>{{ file.mimeType }}</td>
                                        <td>
                                            <button class="btn btn-success open-img-prev"
                                                    data-imgname="{{ file.name }}"
                                                    type="button">
                                                <span class="fa fa-eye"></span> Просмотр изобр.
                                            </button>
                                        </td>
                                        <td>
                                            {% if not file.isDefault %}
                                                <button class="btn btn-primary set-as-default"
                                                        data-fileid="{{ file.id }}"
                                                        type="button">
                                                    <span class="fa fa-star-o"></span> По умолч.
                                                </button>
                                            {% else %}
                                                <button class="btn btn-primary set-as-default"
                                                        data-fileid="{{ file.id }}"
                                                        type="button" disabled="disabled">Выбрано по умолчанию
                                                </button>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <button class="btn btn-warning delete-object" type="button"
                                                    data-objectname="file"
                                                    data-objectid="{{ file.id }}">
                                                <span class="fa fa-trash"></span> Удалить
                                            </button>
                                        </td>

                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div id="prevModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Просмотр изображения %imgname%</h4>
                </div>
                <div class="modal-body">
                    <img src="" id="prev-img" style="width: 100%;">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="{{ asset('js/plugins/dataTables/datatables.min.js') }}"></script>

    <script>
        $(document).ready(function () {

            $(".open-img-prev").click(function () {
                var imgname = $(this).data('imgname'),
                    modalTitle = $('.modal-title').text(),
                    entityName = '{{ routeParams.entity }}',
                    filePathPattern = '{{ asset('upload/%entity%/%imgname%') }}';

                $('.modal-title').text(modalTitle.replace('%imgname%', imgname));
                $('#prev-img').attr('src', filePathPattern.replace('%entity%', entityName).replace('%imgname%', imgname));
                console.log(entityName)
                $("#prevModal").modal();
            });


            $('.files-list-table').DataTable({
                pageLength: 10,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    {extend: 'copy'},
                    {extend: 'csv'},
                    {extend: 'excel', title: 'ExampleFile'},
                    {extend: 'pdf', title: 'ExampleFile'},

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });

        });
    </script>
{% endblock %}