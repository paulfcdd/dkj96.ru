<div id="myCarousel" class="carousel slide hidden-xs" data-ride="carousel">
	<!-- Wrapper for slides -->
	<div class="carousel-inner" id="main-banner-index">

		{% set activeBanner = banners | first %}
		{% set banners = banners | slice(1) %}
		{% set activeBannerImage = activeBanner.files | first %}

			<div class="item active">
				{% if activeBanner.link == 1 %}

					{% if activeBanner.category == 'news' %}
						{% set path = path('front.news', {'news': activeBanner.object}) %}
					{% endif %}

					{% if activeBanner.category == 'event' %}
						{% set path = path('event.details_page', {'event': activeBanner.object}) %}
					{% endif %}

						<a href="{{ path }}">
				{% endif %}
						<img src="{{ asset('upload/banner/'~activeBannerImage.name) }}" alt="{{ activeBanner.alt }}" style="width:100%;">

				{% if activeBanner.link == 1 %}
						</a>
				{% endif %}

			</div>
		{% for banner in banners %}
			{% set bannerImage = banner.files | first %}
			<div class="item">
				{% if banner.link == 1 %}

				{% if banner.category == 'news' %}
					{% set path = path('front.news', {'news': banner.object}) %}
				{% endif %}

				{% if banner.category == 'event' %}
					{% set path = path('event.details_page', {'event': banner.object}) %}
				{% endif %}

				<a href="{{ path }}">
					{% endif %}
				<img src="{{ asset('upload/banner/'~bannerImage.name) }}" alt="{{ banner.alt }}" style="width:100%;">
					{% if activeBanner.link == 1 %}
				</a>
				{% endif %}
			</div>
		{% endfor %}

	</div>

	<!-- Left and right controls -->
	<a class="left carousel-control custom-carousel-control" href="#myCarousel" data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
		<span class="sr-only">Previous</span>
	</a>
	<a class="right carousel-control custom-carousel-control" href="#myCarousel" data-slide="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
		<span class="sr-only">Next</span>
	</a>
</div>



